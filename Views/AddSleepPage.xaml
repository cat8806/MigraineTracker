<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
    x:Class="MigraineTracker.Views.AddSleepPage"  
    Title="Add Sleep">

  <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="16">

      <!-- Start Date + Time -->
      <Label Text="Sleep Start Date" />
      <DatePicker x:Name="StartDatePicker" />
      <Label Text="Sleep Start Time" />
      <TimePicker x:Name="StartTimePicker" />

      <!-- End Date + Time -->
      <Label Text="Sleep End Date" />
      <DatePicker x:Name="EndDatePicker" />
      <Label Text="Sleep End Time" />
      <TimePicker x:Name="EndTimePicker" />

      <!-- Quality -->
      <Label Text="Quality" />
      <Picker x:Name="QualityPicker">
        <Picker.Items>
          <x:String>Good</x:String>
          <x:String>Fair</x:String>
          <x:String>Poor</x:String>
        </Picker.Items>
      </Picker>

      <!-- Notes -->
      <Label Text="Notes" />
      <Editor x:Name="NotesEditor"
              HeightRequest="80"
              Placeholder="e.g. Snoring, low Oâ‚‚"/>

      <!-- Actions -->
      <Button Text="Import Last Sleep"
              BackgroundColor="#F1F0F4"
              TextColor="Black"
              Clicked="OnImportClicked"/>
      <Button Text="Save"
              BackgroundColor="#5D3EE4"
                          TextColor="White"
              Clicked="OnSaveClicked"/>
      <Button Text="Cancel"
              BackgroundColor="#F1F0F4" 
			  TextColor="Black"
              Clicked="OnCancelClicked"/>

    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
